
@{
    ViewData["Title"] = "Register";
}
@model UserVM
@*---- İmage area-- *@
<div class="contact-img-area" style="background-size:cover">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="con-text">
                    <h2 class="page-title">Login</h2>
                    <p><a href="#">Home</a> | Login</p>
                </div>
            </div>
        </div>
    </div>
</div>
@*---- İmage area-- *@

<!-- ##### Login Area Start ##### -->
<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Welcome Back</h3>
                    <!-- Register Form -->
                    <div class="login-form">
                        <form asp-controller="Account" asp-action="Register" method="post">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="FirstName" class="form-control" placeholder="Adınızı Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <input type="text" name="LastName" class="form-control" placeholder="Soyadınızı Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="Email" class="form-control" placeholder="Mail Adresinizi Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="Password" class="form-control" placeholder="Şifre Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" name="Address" class="form-control" placeholder="Adres Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" name="PhoneNumber" class="form-control" placeholder="Telefon Numaranızı giriniz">
                            </div>
                            <div class="form-group">
                                <label>BirtDate</label>
                                <input type="date" name="BirthDate" class="" placeholder="Doğum tarihinizi giriniz">
                            </div>
                            <button type="submit" class="btn oneMusic-btn mt-30">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Login Area End ##### -->
